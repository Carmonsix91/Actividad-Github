from Actividad-Github import suma, resta, multiplicacion, division, exponencial

def mostrar_menu():
    print("\nCalculadora Básica")
    print("1. Suma")
    print("2. Resta")
    print("3. Multiplicacion")
    print("4. Division")
    print("5. Exponencial")
    print("6. Salir")

def main():
    while True:
        mostrar_menu()
        opcion = input("Selecciona una opcion (1-6): ")

        if opcion == '1':
            suma() 
        elif opcion == '2':
            resta() 
        elif opcion == '3':
            multiplicacion()
        elif opcion == '4':
            division()
        elif opcion == '5':
            exponencial()
        elif opcion == '6':
            print("Saliendo de la calculadora")
            break
        else:
            print("Opción no valida. Intenta de nuevo.")

if __name__ == "__main__":
    main()
